import javax.swing.*;
public class Ejercicios_java5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String radio=JOptionPane.showInputDialog("Introduce el radio, por favor");
		
		double radio_conv = Double.parseDouble(radio);
		
		double parentesis=4/3;
		
		System.out.print("El volumen de la esfera es " + (parentesis*Math.PI*Math.pow(radio_conv, 3)));
		
		System.out.print("La superficie de la esfera es " + (4*Math.PI*Math.pow(radio_conv, 2)));
		
	}
}